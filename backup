#version 100

precision mediump float;

uniform vec2 gridSize;
uniform vec2 cellSize;

void main()
{
    vec2 uv = gl_FragCoord.xy / gridSize;
    vec2 cellUV = fract(uv / cellSize);
    
    float gridLineThickness = 0.01;
    vec3 gridLineColor = vec3(0.0, 0.0, 0.0);
    vec3 backgroundColor = vec3(1.0, 1.0, 1.0);
    
    // Draw grid lines
    vec3 color = mix(backgroundColor, gridLineColor, step(gridLineThickness, cellUV.x) * step(gridLineThickness, cellUV.y));
    
    gl_FragColor = vec4(color, 1.0);
}
